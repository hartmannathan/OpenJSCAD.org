{
  "version": "independent",
  "npmClient": "pnpm",
  "command": {
    "version": {
      "allowBranch": "v3-prerelease",
      "conventionalCommits": true,
      "exact": true,
      "message": "chore(release): publish",
      "syncWorkspaceLock": true
    }
  },
  "ignoreChanges": [
    "**/*.md"
  ],
  "packages": [
    "packages/cli",
    "packages/core",
    "packages/io/*",
    "packages/modeling",
    "packages/web",
    "packages/utils/*"
  ]
}
